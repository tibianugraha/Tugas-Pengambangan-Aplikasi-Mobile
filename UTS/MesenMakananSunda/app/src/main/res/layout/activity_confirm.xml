<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sunda_cream"
    android:padding="24dp"
    tools:context=".ConfirmActivity">

    <TextView
        android:id="@+id/tvJudulKonfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Pesanan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/sunda_brown"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <ImageView
        android:id="@+id/imgMakananKonfirmasi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@drawable/nasi_liwet"
        android:layout_marginBottom="24dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvNamaMakananKonfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Makanan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/sunda_dark_green"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvHargaMakananKonfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp 25.000"
        android:textSize="18sp"
        android:textColor="@color/sunda_brown"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        tools:text="Detail Pesanan Akan Tampil di Sini" />


    <TextView
        android:id="@+id/tvDeskripsiKonfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi makanan khas Sunda yang lezat dan menggugah selera."
        android:textSize="16sp"
        android:textColor="@color/sunda_dark_text"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnKonfirmasiPesanan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Konfirmasi Pesanan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/sunda_green"
        android:textColor="@color/white" />

</LinearLayout>
